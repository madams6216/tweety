<div class="page-header">
  <h1>Tweets</h1>
</div>
  <% @tweets.each do |tweet| %>
  <h3><%= tweet.user.name %> <small>@<%= tweet.user.username %> - <%= time_ago_in_words(tweet.created_at) + " ago" %></small></h3>
  <p><%= tweet.content %></p>
    <% if signed_in? && current_user == tweet.user %>
      <p><%= link_to 'Show', tweet %> | <%= link_to 'Edit', edit_tweet_path(tweet) %> | <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <% end %>
  <% end %>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
